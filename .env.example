# MongoDB Configuration
MONGO_URI=mongodb://actionjackson:your-strong-password@localhost:27017/action_jackson?authSource=admin
MONGO_ROOT_PASSWORD=your-strong-root-password
MONGO_DEV_PASSWORD=dev-user-password

# Email Configuration
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password
ADMIN_EMAIL=admin@actionjacksoninstalls.com

# Security Configuration
INVOICE_API_KEY=your-secure-64-character-random-api-key-for-invoice-access-change-immediately

# MinIO S3 Storage Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio-access-key
MINIO_SECRET_KEY=minio-secret-key
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=actionjackson-files

# Admin Authentication Configuration
ADMIN_JWT_SECRET=your-64-character-random-jwt-secret-string-change-immediately
ADMIN_SESSION_SECRET=your-64-character-random-session-secret-string-change-immediately
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=ChangeThisSecurePassword123!

# Authentication Security Settings
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000
JWT_EXPIRE=900
REFRESH_TOKEN_EXPIRE=604800

NODE_ENV=development

# Server Configuration
PORT=3000

# Security Notes:
# - Use strong passwords (minimum 12 characters with mixed case, numbers, symbols)
# - Rotate passwords regularly
# - Consider using Docker secrets in production
# - INVOICE_API_KEY is optional - if not set, invoice API has no authentication
# - MongoDB is exposed on local network (192.168.1.69:27017) for development
